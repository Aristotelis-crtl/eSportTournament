@page
@model eSportTournament.Pages.Equipes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Equipes</h1>
@if (Model.showCreate)
{
<p>
    <a asp-page="Create">Créer une équipe</a>
</p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                Nom
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Equipe) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nomEquipe)
            </td>
            <td>
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> 
               @if (Model.showDelete)
               { <a asp-page="./Delete" asp-route-id="@item.ID"> | Supprimer</a>}
            </td>
        </tr>
}
    </tbody>
</table>
