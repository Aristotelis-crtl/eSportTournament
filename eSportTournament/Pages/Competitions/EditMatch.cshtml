@page
@model eSportTournament.Pages.Competitions.EditMatchModel

@{
    ViewData["Title"] = "EditMatch";
}

<h1>EditMatch</h1>

<h4>Match</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input type="hidden" asp-for="Match.ID" />
            <div class="form-group">
                <p>@Model.Match.EquipeA.nomEquipe</p>
            </div>
            <div class="form-group">
                <input asp-for="Match.EquipeAScore" class="form-control" />
            </div>

            <div class="form-group">
                <p>@Model.Match.EquipeB.nomEquipe</p>
            </div>
            <div class="form-group">
                <input asp-for="Match.EquipeBScore" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Retour à la liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
